<local:_BBox x:Class="ManipulatedBBox.BoundingBox_grid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManipulatedBBox"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="grid_container">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/DesignerItem.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <AdornerDecorator ClipToBounds="False">
        <Grid
            ClipToBounds="False"
            SnapsToDevicePixels="True">
            <local:ManipulatedContentControl x:Name="cont" MouseDoubleClick="control_MouseDoubleClick"
                                            VerticalAlignment="Top" HorizontalAlignment="Left"
                                            Selector.IsSelected="False" 
                                            Style="{StaticResource DesignerItemStyle}">

            </local:ManipulatedContentControl>
        </Grid>
    </AdornerDecorator>
</local:_BBox>
